<!-- Alerts & Messages -->
<% if flash[:notice] %>
<div class="alert alert-success flash_notice">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <i class="material-icons">close</i>
  </button>
  <span>
    <b><%= flash[:notice] %> </b>
  </span>
</div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-success flash_notice">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <i class="material-icons">close</i>
    </button>
    <span>
      <b><%= flash[:alert] %></b>
    </span>
  </div>
<% end %>